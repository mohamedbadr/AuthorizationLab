@using System.Security.Claims;
@{
    ViewData["Title"] = "Index";
}
@if (!User.Identities.Any(i => i.IsAuthenticated))
{
    <h1>Hello World</h1>
}
else
{
    <h1>
        Hello @User.Identities.First(
                  u => u.IsAuthenticated &&
                       u.HasClaim(c => c.Type == ClaimTypes.Name)).FindFirst(ClaimTypes.Name).Value
    </h1>
}
